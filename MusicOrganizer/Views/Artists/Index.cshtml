@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Music Organizer</title>
  </head>
  <div class="container">
    <body>
      @using MusicOrganizer.Models;

      <h1>Artists:</h1>

      @if (@Model.Count == 0)
      {
        <h3>No artists have been added yet.</h3>
      }

      @foreach (Artist artist in Model)
      {
        <h3><a href="/artists/@artist.Id">@artist.Name</a></h3>
        <br>
      }
      <form action="artists/delete" method="post">
        <button type="submit" name="button">Clear Artist List</button>
      </form>
      <br>
      <p><a href="/">Return to home</a></p>
    </body>
  </div>
</html>