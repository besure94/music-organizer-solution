@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Music Organizer</title>
  </head>
  <div class="container">
    <body>
      @using MusicOrganizer.Models;

      <h1>Albums by this artist:</h1>

      <ol>
        @foreach (Record record in @Model["records"])
        {
          <li><a href='/artists/@Model["artist"].Id/records/@record.Id'>@record.Title</a></li>
        }
      </ol>

      <p><a href='/artists/@Model["artist"].Id/records/new'>Add a new album</a></p>
      <p><a href='/artists'>Return to artist list</a></p>
      <p><a href='/'>Return to home page</a></p>
    </body>
  </div>
</html>