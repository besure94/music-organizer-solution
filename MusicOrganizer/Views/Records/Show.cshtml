@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Music Organizer</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous">
  </head>
  <div class="container">
    <body>
      <h1>Album Details:</h1>

      <h3>Title: @Model["record"].Title</h3>
      <h3>Artist: @Model["artist"].Name</h3>
      <br>
      <img src=@Model["record"].ArtworkUrl>
      <br>
      <br>
      <a href='/artists/@Model["artist"].Id/records/new'>Add another album</a>
      <br>
      <br>
      <a href='/artists/@Model["artist"].Id'>View all albums by this artist</a>
      <br>
      <br>
      <a href="/artists">View all artists</a>
    </body>
  </div>
</html>