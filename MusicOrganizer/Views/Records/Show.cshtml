@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Music Organizer</title>
  </head>
  <div class="container">
    <body>
      <h1>Album Details:</h1>

      <h3>Title: @Model["record"].Title</h3>
      <h3>Artist: @Model["artist"].Name</h3>
      <br>
      <img src=@Model["record"].ArtworkUrl>
      <br>
      <br>
      <a href='/artists/@Model["artist"].Id/records/new'>Add another album</a>
      <br>
      <br>
      <a href='/artists/@Model["artist"].Id'>View all albums by this artist</a>
      <br>
      <br>
      <a href="/artists">View all artists</a>
    </body>
  </div>
</html>